{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["*", "src/*"]
      },
      "target": "es5",
      "strict": true,
      "module": "esNext",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
    },
    "include": [
      "./src/*"
    ],
  }